<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>status</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>UserLoginServlet</servlet-name>
        <servlet-class>com.xit.store.controller.UserLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserRegisterServlet</servlet-name>
        <servlet-class>com.xit.store.controller.UserRegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TenDayUserLoginServlet</servlet-name>
        <servlet-class>com.xit.store.controller.TenDayUserLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CommodityShowServlet</servlet-name>
        <servlet-class>com.xit.store.controller.CommodityShowServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCommodityServlet</servlet-name>
        <servlet-class>com.xit.store.controller.AddCommodityServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteCommodityServlet</servlet-name>
        <servlet-class>com.xit.store.controller.DeleteCommodityServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCommodityServlet</servlet-name>
        <servlet-class>com.xit.store.controller.UpdateCommodityServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetCommodityByIdServlet</servlet-name>
        <servlet-class>com.xit.store.controller.GetCommodityByIdServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChargeServlet</servlet-name>
        <servlet-class>com.xit.store.controller.ChargeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FlowServlet</servlet-name>
        <servlet-class>com.xit.store.controller.FlowServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FlowServlet</servlet-name>
        <url-pattern>/transaction/flow</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChargeServlet</servlet-name>
        <url-pattern>/transaction/charge</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetCommodityByIdServlet</servlet-name>
        <url-pattern>/commodity/getById</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCommodityServlet</servlet-name>
        <url-pattern>/commodity/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteCommodityServlet</servlet-name>
        <url-pattern>/commodity/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCommodityServlet</servlet-name>
        <url-pattern>/commodity/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CommodityShowServlet</servlet-name>
        <url-pattern>/commodity/show</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TenDayUserLoginServlet</servlet-name>
        <url-pattern>/status</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserRegisterServlet</servlet-name>
        <url-pattern>/user/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserLoginServlet</servlet-name>
        <url-pattern>/user/login</url-pattern>
    </servlet-mapping>
</web-app>